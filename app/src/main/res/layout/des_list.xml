                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:text="Rs.290"
                                />
                        </TableRow>


                        <TableRow
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="1dp"
