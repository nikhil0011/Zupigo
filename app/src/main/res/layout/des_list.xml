                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                android:paddingLeft="20dp"
                                android:text="Rs.290"
                                />

                        </TableRow>


                    </TableLayout>

                </RelativeLayout>

                <RelativeLayout
